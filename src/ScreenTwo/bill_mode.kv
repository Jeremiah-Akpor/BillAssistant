
<CustomLabel@MDLabel>
    text: ""
    font_name: "Roboto-Regular"
    pos_hint: {'center_x': 0.5,'center_y': 0.8}
    halign: "center"
    size_hint: 1,0.3
    theme_text_color: "Custom"
    text_color: [181/255, 209/255, 255/255] if app.theme_cls.theme_style == 'Dark' else [22/255,26/255,31/255,1]
<CustomTextField@MDTextField>
    hint_text: ""
    helper_text: ""
    helper_text_mode: "on_focus"
    icon_right: "cash"
    icon_right_color: [181/255, 209/255, 255/255] if app.theme_cls.theme_style == 'Dark' else [22/255,26/255,31/255,1]
    #pos_hint:{'center_x': 0.5,'center_y': 0.5}
    size_hint: 1,1
    width:300
    halign: "right"
    input_filter: 'int'
    

# this it the Bill mode screen
<BillMode>:
    md_bg_color: [35/255,43/255,50/255,1] if app.theme_cls.theme_style == 'Dark' else [181/255, 209/255, 255/255]
    MDFloatLayout:
        NavBar:
            size_hint: .85, .1
            pos_hint: {'center_x': .5, 'center_y':.1 }
            elevation: 1
            radius:[16]
            md_bg_color: [22/255,26/255,31/255,1]
            MDGridLayout:
                cols: 2
                size_hint:1,1
                pos_hint: {'center_x': .5, 'center_y': .5}
                md_bg_color: [22/255,26/255,31/255,1]
                radius:[16]
                

                MDIconButton:
                    id: bill_mode_button
                    icon: "currency-eur"
                    ripple_scale: 0
                    user_font_size: "40sp"
                    size_hint: 1,1
                    #width: dp(48)  # set a fixed width of 48dp
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    md_bg_color: [181/255, 209/255, 255/255]
                    # changes the theme style of the app
                    theme_text_color: "Custom"
                    text_color: [22/255,26/255,31/255,1]

                MDIconButton:
                    id: calculator_mode_button
                    icon: "calculator"
                    ripple_scale: 0
                    user_font_size: "40sp"
                    size_hint: 1,1
                    width: dp(48)  # set a fixed width of 48dp
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    # changes the theme style of the app
                    on_release: 
                        app.sm.current = "Calculator"
                    theme_text_color: "Custom"
                    text_color: [181/255, 209/255, 255/255]
    MDBoxLayout:
        orientation: 'vertical'
        spacing: 8
        MDIconButton:
            icon: "theme-light-dark"
            pos_hint: {'top': 1, 'right': 1}
            size_hint: None, None
            size: dp(48), dp(48)
            # changes the theme style of the app
            on_press: app.toggle_theme(True) if app.theme_cls.theme_style == 'Light' else app.toggle_theme(False)
            theme_text_color: "Custom"
            text_color: [181/255, 209/255, 255/255] if app.theme_cls.theme_style == 'Dark' else [22/255,26/255,31/255,1]

        MDLabel:
            text: "Billmode"
            font_name: "Roboto-BoldItalic"
            font_size: "40sp"
            pos_hint: {'center_x': 0.5,'center_y': 0.8}
            halign: "center"
            size_hint: 1,0.3
            theme_text_color: "Custom"
            text_color: [181/255, 209/255, 255/255] if app.theme_cls.theme_style == 'Dark' else [22/255,26/255,31/255,1]
        MDGridLayout:
            cols: 3
            size_hint_x: 1
            CustomLabel:
                text: "Money Notes"
            CustomLabel:
                text: "Numbers of Notes"
            CustomLabel:
                text: "Total"
            CustomLabel:
                text: "500"
            CustomTextField:
                id: five_hundred_euro_Note
                hint_text: "enter number of 500 Euro notes"
                on_text:
                    app.calculate(five_hundred_euro_Note_total, 500, five_hundred_euro_Note)
                on_text_validate:
                    app.focus_next(two_hundred_euro_Note)

            CustomLabel:
                id: five_hundred_euro_Note_total
                text: "0"
            CustomLabel:
                text: "200"
            CustomTextField:
                id: two_hundred_euro_Note
                hint_text: "enter number of 200 Euro notes"
            CustomLabel:
                text: "0"
            CustomLabel:
                text: "100"
            CustomTextField:
                id: one_hundred_euro_Note
                hint_text: "enter number of 100 Euro notes"
            CustomLabel:
                text: "0"
            CustomLabel:
                text: "50"
            CustomTextField:
                id: fifty_hundred_euro_Note
                hint_text: "enter number of 50 Euro notes"
            CustomLabel:
                text: "0"
            CustomLabel:
                text: "20"
            CustomTextField:
                id: twenty_hundred_euro_Note
                hint_text: "enter number of 20 Euro notes"
            CustomLabel:
                text: "0"
            CustomLabel:
                text: "10"
            CustomTextField:
                id: ten_euro_Note
                hint_text: "enter number of 10 Euro notes"
            CustomLabel:
                text: "0"
            CustomLabel:
                text: "5"
            CustomTextField:
                id: five_euro_Note
                hint_text: "enter number of 5 Euro notes"
            CustomLabel:
                text: "0"
        MDGridLayout:
            cols: 3
