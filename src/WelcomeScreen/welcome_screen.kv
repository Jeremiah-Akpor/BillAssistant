<Welcome>:
    md_bg_color: [35/255,43/255,50/255,1] if app.theme_cls.theme_style == 'Dark' else [181/255, 209/255, 255/255]

    MDBoxLayout:
        orientation: 'vertical'
        spacing: 8
        MDIconButton:
            icon: "theme-light-dark"
            pos_hint: {'top': 1, 'right': 1}
            size_hint: None, None
            size: dp(48), dp(48)
            # changes the theme style of the app
            on_press: app.toggle_theme(True) if app.theme_cls.theme_style == 'Light' else app.toggle_theme(False)
            theme_text_color: "Custom"
            text_color: [181/255, 209/255, 255/255] if app.theme_cls.theme_style == 'Dark' else [22/255,26/255,31/255,1]

        MDLabel:
            text: "Welcome to BillBuddy"
            font_name: "Roboto-BoldItalic"
            font_size: "40sp"
            pos_hint: {'center_x': 0.5,'center_y': 0.8}
            halign: "center"
            size_hint: 1,0.3
            theme_text_color: "Custom"
            text_color: [181/255, 209/255, 255/255] if app.theme_cls.theme_style == 'Dark' else [22/255,26/255,31/255,1]
        MDCard:
            size_hint: None, None
            size: dp(350), dp(350)
            pos_hint: {'center_x': 0.5, 'center_y': 0.6}
            elevation: 3
            radius: dp(180)/2
            #padding: dp(4)
            md_bg_color: [1,1,1,1]
            canvas.before:
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [dp(130)/2]
            FitImage:
                source: "images/icon.jpeg"
                size: self.parent.size
                pos_hint: {'center_x': 0.5,'center_y': 0.5}
                allow_stretch: True
                keep_ratio: True
                radius: dp(130)/2

        MDLabel:
            text: "Spercial Money Notes Calculator"
            font_style: "H6"
            halign: "center"    
            size_hint: 1,0.4
            theme_text_color: "Custom"
            text_color: [181/255, 209/255, 255/255] if app.theme_cls.theme_style == 'Dark' else [22/255,26/255,31/255,1]

        MDRaisedButton:
            text: "Mode"
            pos_hint: {'center_x': 0.5,'center_y': 0.5}
            on_press: app.sm.transition.direction = 'left'; app.sm.current = 'SelectMode'
            md_bg_color: [22/255,26/255,31/255,1] 
            theme_text_color: "Custom"
            text_color: [181/255, 209/255, 255/255] 
            size_hint: .3,.2
        # this is to make the buttons move up a little bit
        Widget:
            size_hint_y: None
            height: 150