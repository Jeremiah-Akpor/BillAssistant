<SelectMode>:
    md_bg_color: [1,1,1,1]
    MDBoxLayout:
        orientation: 'vertical'
        MDLabel:
            text: "Welcome to BillBuddy"
            font_name: "Roboto-BoldItalic"
            font_size: "40sp"
            pos_hint: {'center_x': 0.5,'center_y': 0.8}
            halign: "center"
            color: rgba(34,34,34,255)
        Image:
            source: "images/icon.jpeg"
            size_hint: .8,.8
            pos_hint: {'center_x': 0.5,'center_y': 0.65}
        MDLabel:
            text: "Spercial Money Notes Calculator"
            font_name: "Roboto-Regular"
            font_size: "23sp"
            pos_hint: {'center_y': 0.38}
            halign: "center"
            color: rgba(34,34,34,255)
