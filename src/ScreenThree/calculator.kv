<CustomButton@MDFillRoundFlatButton>
    text: ""
    font_size: "45sp"
    bold: True
    size_hint: None,None
    size: dp(20),dp(20)
    md_bg_color: [22/255,26/255,31/255,1] if app.theme_cls.theme_style == 'Dark' else [181/255, 209/255, 255/255]
    pos_hint: {'center_x': 0.5,'center_y': 0.5}
    theme_text_color: "Custom"
    text_color: [181/255, 209/255, 255/255] if app.theme_cls.theme_style == 'Dark' else [22/255,26/255,31/255,1]
# this it the Bill mode screen
<Calculator>:
    md_bg_color: [35/255,43/255,50/255,1] if app.theme_cls.theme_style == 'Dark' else [181/255, 209/255, 255/255]
    BoxLayout:
        orientation: 'vertical'
        MDFloatLayout:
            MDIconButton:
                icon: 'arrow-left'
                on_release: app.sm.transition.direction = 'right'; app.sm.current = 'SelectMode'
                size_hint: .1,None
                pos_hint: {'center_y': .8}
                user_font_size: "35p"
                theme_text_color: 'Custom'
                text_color: [181/255, 209/255, 255/255] if app.theme_cls.theme_style == 'Dark' else [22/255,26/255,31/255,1]

            MDLabel:
                text: "Calculator"
                font_name: "Roboto-BoldItalic"
                font_size: "20sp"
                pos_hint: {'center_x': 0.5, 'center_y': .8}
                halign: "center"
                size_hint: 1,0.3
                theme_text_color: "Custom"
                text_color: [181/255, 209/255, 255/255] if app.theme_cls.theme_style == 'Dark' else [22/255,26/255,31/255,1]
            MDIconButton:
                icon: "theme-light-dark"
                pos_hint: {'center_y': .8, 'right': 1}
                size_hint: None,None
                size: dp(48), dp(48)
                # changes the theme style of the app
                on_press: app.toggle_theme(True) if app.theme_cls.theme_style == 'Light' else app.toggle_theme(False)
                theme_text_color: "Custom"
                text_color: [181/255, 209/255, 255/255] if app.theme_cls.theme_style == 'Dark' else [22/255,26/255,31/255,1]
        MDFloatLayout:
            MDLabel:
                id: calc_input
                text: "0"
                font_name: "Roboto-BoldItalic"
                font_size: "45sp"
                pos_hint: {'center_x': 0.5,'center_y': 1.5}
                halign: "right"
                size_hint_y:None
                theme_text_color: "Custom"
                text_color: [181/255, 209/255, 255/255] if app.theme_cls.theme_style == 'Dark' else [22/255,26/255,31/255,1]

            MDLabel:
                id: answer
                text: "0"
                size_hint_y:None
                font_size:"55sp"
                pos_hint: {'center_x': 0.5,'center_y': 1}
                halign:'right'
                bold:True
                theme_text_color: "Custom"
                text_color: [181/255, 209/255, 255/255] if app.theme_cls.theme_style == 'Dark' else [22/255,26/255,31/255,1]

        MDFloatLayout:
            GridLayout:
                spacing:3,5
                cols: 4
                rows: 5
                pos_hint: {'center_x': 0.5,'center_y': 1}
                size_hint: (1,1.5)
                id: grid
                # Row 1
                MDFillRoundFlatButton:
                    size_hint: (1,1)
                    font_size: 32
                    text: "Ans"
                    on_press: root.other_sign("Ans")


                MDFillRoundFlatButton:
                    id: backspace
                    size_hint: (1,2)
                    font_size: 32
                    text: "DEL"
                    on_press: root.backspace()
                    md_bg_color:[1,0,0,.4]
                    bold:True


                MDFillRoundFlatButton:
                    id: clear
                    size_hint: (1,2)
                    font_size: 32
                    text: "C"
                    on_press:
                        root.clear()
                    md_bg_color:[1,0,0,.4]

                MDFillRoundFlatButton:
                    id: Division
                    size_hint: (1,2)
                    font_size: 32
                    text: "/"
                    on_press: root.math_sign("/")
                    bold:True


                # Row 2
                CustomButton:
                    id: seven
                    size_hint: (1,2)
                    font_size: 32
                    text: "7"
                    background_color: (157/255, 157/255, 157/255, 1)
                    on_press: root.button_press(7)

                CustomButton:
                    id: eight
                    size_hint: (1,2)
                    font_size: 32
                    text: "8"
                    background_color: (157/255, 157/255, 157/255, 1)
                    on_press: root.button_press(8)


                CustomButton:
                    id: nine
                    size_hint: (1,2)
                    font_size: 32
                    text: "9"
                    background_color: (157/255, 157/255, 157/255, 1)
                    on_press: root.button_press(9)

                MDFillRoundFlatButton:
                    id: Multiplication
                    size_hint: (1,2)
                    font_size: 32
                    text: "x"
                    on_press: root.math_sign("*")
                    bold:True

                # Row 3
                CustomButton:
                    id: four
                    size_hint: (1,2)
                    font_size: 32
                    text: "4"
                    background_color: (157/255, 157/255, 157/255, 1)
                    on_press: root.button_press(4)

                CustomButton:
                    id: five
                    size_hint: (1,2)
                    font_size: 32
                    text: "5"
                    background_color: (157/255, 157/255, 157/255, 1)
                    on_press: root.button_press(5)

                CustomButton:
                    id: six
                    size_hint: (1,2)
                    font_size: 32
                    text: "6"
                    background_color: (157/255, 157/255, 157/255, 1)
                    on_press: root.button_press(6)

                MDFillRoundFlatButton:
                    id: Subtraction
                    size_hint: (1,2)
                    font_size: 32
                    text: "-"
                    on_press: root.math_sign("-")
                    bold:True


                # Row 4
                CustomButton:
                    id: one
                    size_hint: (1,2)
                    font_size: 32
                    text: "1"
                    background_color: (157/255, 157/255, 157/255, 1)
                    on_press: root.button_press(1)

                CustomButton:
                    id: two
                    size_hint: (1,2)
                    font_size: 32
                    text: "2"
                    background_color: (157/255, 157/255, 157/255, 1)
                    on_press: root.button_press(2)


                CustomButton:
                    id: three
                    size_hint: (1,2)
                    font_size: 32
                    text: "3"
                    background_color: (157/255, 157/255, 157/255, 1)
                    on_press: root.button_press(3)

                MDFillRoundFlatButton:
                    id: Addition
                    size_hint: (1,2)
                    font_size: 32
                    text: "+"
                    on_press: root.math_sign("+")
                    bold:True

                # Row 5
                CustomButton:
                    size_hint: (1,2)
                    font_size: 32
                    text: "+/-"
                    background_color: (157/255, 157/255, 157/255, 1)
                    on_press: root.other_sign("-")

                CustomButton:
                    id: zero
                    size_hint: (1,2)
                    font_size: 32
                    text: "0"
                    background_color: (157/255, 157/255, 157/255, 1)
                    on_press: root.button_press(0)


                CustomButton:
                    id: decimal
                    size_hint: (1,2)
                    font_size: 32
                    text: "."
                    background_color: (157/255, 157/255, 157/255, 1)
                    on_press: root.other_sign(".")

                MDFillRoundFlatButton:
                    id: equals
                    size_hint: (1,2)
                    font_size: 32
                    text: "="
                    on_press: root.equals()
                    bold:True
            MDLabel:
                text:""
                pos_hint: {'center_x': 0.5,'center_y': 0}
            MDLabel:
                text:""
                pos_hint: {'center_x': 0.5,'center_y': 0}
    